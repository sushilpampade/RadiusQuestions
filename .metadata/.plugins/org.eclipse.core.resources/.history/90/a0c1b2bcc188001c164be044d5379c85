package Questions;

import java.util.Arrays;

public class LargestAndSmallestElementArray {

	public static void main(String[] args) {

		int[] x= {3,6,2,7,2,7,8,1};
		Arrays.sort(x);
		static int max;
		int min;
		for(int y:x) {
			if(y>max)
			{
				max=y;
			}
			if(y<min)
			{
				min=y;
			}
		}
		System.out.println("max="+max);
		System.out.println("min="+min);

	}

}
